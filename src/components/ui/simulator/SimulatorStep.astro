---
/**
 * SimulatorStep Component
 * Wrapper for each step in the credit simulator
 */
interface Props {
  id: string;
  question?: string;
  isStep0?: boolean;
}

const { id, question, isStep0 = false } = Astro.props;
---

<div class:list={["credit-simulator__step", { "is-welcome": isStep0 }]} id={id}>
  <div class="credit-simulator__step-content">
    {
      question &&
        (isStep0 ? (
          <h2 class="credit-simulator__step-question type-h2">{question}</h2>
        ) : (
          <h3 class="credit-simulator__step-question type-h3">{question}</h3>
        ))
    }
    <slot />
  </div>
</div>

<style>
  .credit-simulator__step {
    width: 20%; /* Each step is 20% of the 500% track */
    min-height: 100%;
    flex-shrink: 0;
    padding: 160px 2rem 3rem 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    border: none;
    margin: 0;
  }

  /* Welcome step: center content vertically */
  .is-welcome {
    justify-content: center;
    padding-top: 0;
    padding-bottom: 0;
  }

  .credit-simulator__step-content {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .credit-simulator__step-question {
    /* Inherits .type-h2 (welcome) or .type-h3 (other steps) via HTML class */
    text-align: center;
    max-width: 800px;
    color: var(--color-white);
    margin-bottom: 0;
  }
</style>
