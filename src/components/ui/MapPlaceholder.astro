---
/**
 * MapPlaceholder.astro
 * A premium, architectural map placeholder with a reveal effect.
 */
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class:list={["map-placeholder", className]}>
  <div class="map-placeholder__visual">
    <span class="map-placeholder__label">Plan de situation</span>
    <div class="map-placeholder__grid"></div>
  </div>
</div>

<style>
  .map-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-gray-100);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .map-placeholder__visual {
    width: 100%;
    height: 100%;
    /* Simulated Map Look using OSM-like colors */
    background-color: #d8e2e9; /* Water/Neutral */
    background-image:
      linear-gradient(white 2px, transparent 2px),
      linear-gradient(90deg, white 2px, transparent 2px);
    background-size: 100px 100px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Add a "Map Tile" simulation via CSS or use a real image if provided later */
  .map-placeholder__visual::before {
    content: "OpenStreetMap Simulation";
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    font-size: 0.75rem;
    opacity: 0.5;
  }

  .map-placeholder__visual::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    border: 1px solid var(--color-primary);
    border-radius: 50%;
    opacity: 0.2;
  }

  .map-placeholder__label {
    background-color: var(--color-white);
    padding: 1rem 2rem;
    font-family: var(--font-family-heading);
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    border: 1px solid var(--color-border);
    z-index: 2;
  }

  .map-placeholder__grid {
    position: absolute;
    inset: 0;
    opacity: 0.5;
  }
</style>
